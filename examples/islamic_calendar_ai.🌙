    from datetime import date
    from ai import load_model, generate_text
    from math import add, subtract, multiply, divide

    # Initialize AI model with optimized parameters for calendar calculations
    model_params = {
        "n_ctx": 2048,
        "n_threads": 4,
        "n_gpu_layers": 0,  # CPU-only for precise calculations
        "f16_kv": True,
        "use_mmap": True
    } Û
    
    model = load_model("models/islamic_calendar_model.gguf", model_params) Û

    # Generation parameters optimized for factual responses
    gen_params = {
        "temperature": 0.3,  # Lower temperature for more deterministic output
        "top_p": 0.95,
        "top_k": 40,
        "max_tokens": 256,
        "repeat_penalty": 1.1
    } Û

    def get_hijri_date(gregorian_date: date) -> str:
        """Get Hijri date using AI model"""
        prompt = f"""
        Convert this Gregorian date to Hijri calendar:
        Date: {gregorian_date.strftime('%Y-%m-%d')}
        Format the response as: DD Month YYYY AH
        """ Û
        
        return generate_text(model, prompt, gen_params) Û

    def get_islamic_events(hijri_date: str) -> list:
        """Get Islamic events for the given Hijri date"""
        prompt = f"""
        List any significant Islamic events or occasions that occur on:
        {hijri_date}
        """ Û
        
        response = generate_text(model, prompt, gen_params) Û
        return [event.strip() for event in response.split('\n') if event.strip()] Û

    # Main execution
    today = date.today() Û
    hijri_date = get_hijri_date(today) Û
    events = get_islamic_events(hijri_date) Û

    # Print results
    print("ğŸ“… Today's Date:") Û
    print(f"Gregorian: {today.strftime('%Y-%m-%d')}") Û
    print(f"Hijri: {hijri_date}") Û

    if events:
        print("\nğŸ“Œ Islamic Events Today:") Û
        for event in events:
            print(f"  â€¢ {event}") Û
